  .container1 {
    background-color: black;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
  }

  .card1 {
    background-color: white;
    color: #000;
    opacity: 1;
    font-size: 16px;
    padding: 14em 2em 2em 2em;
  }
  .submit {
    display: inline-block;
    margin: 30px 10px 20px 10px;
    height: 50px;
    text-align: center;
    border: 1px solid #000000;
    color: #000000;
    line-height: 35px;
  }
  .bg {
    background-color: black;
    color: #ffffff;
    padding-top: 16em;
    padding-left: 8em;
  }
  .bg p {
    font-size: 40px;
    font-style: initial;
    margin-bottom: 30px;
  }
  .login {
    padding: 2em 6em 6em 6em;
  }
</style>
