<div class="container1 row">
  <div class="col-md-6 bg">
    <p>Build by you and your neighbor</p>
    <p>Keep up with everything around you</p>
    <p>Join nextdoor today</p>
  </div>
  <div class="col-md-6 card1">
    <div class="">
      <div class="">
        <h1 class="text-center mb-3">
          <i class="fas fa-sign-in-alt"></i> Login
        </h1>
        <%- include('partials/messages.ejs') %>
        <form action="/users/login" method="POST" class="login">
          <div class="form-group">
            <label for="username">Username</label>
            <input
              type="text"
              id="username"
              name="username"
              class="form-control"
              placeholder="Enter username"
            />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Enter Password"
            />
          </div>
          <button type="submit" class="btn submit btn-block">Login</button>
        </form>
        <p class="lead mt-4">
          No Account? <a href="/users/register">Register</a>
        </p>
      </div>
    </div>
  </div>
</div>
